<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dolphin_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/MMJR_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/grid_menu_open_changelog"
            app:srcCompat="@drawable/banner_tv"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/changelog_title"
            style="@android:style/TextAppearance.Material.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/changelog_title"
            android:textColor="@color/dolphin_fucsia"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/MMJR_logo" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/dolphin_fucsia"
            app:layout_constraintTop_toBottomOf="@id/changelog_title" />

        <ProgressBar
            android:id="@+id/changelog_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/DolphinBase"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="@id/changelog_body"
            app:layout_constraintStart_toStartOf="@id/changelog_body"
            app:layout_constraintEnd_toEndOf="@id/changelog_body"
            app:layout_constraintBottom_toBottomOf="@id/changelog_body" />

        <TextView
            android:id="@+id/changelog_error"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="@string/updater_error"
            android:visibility="invisible"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/changelog_body"
            app:layout_constraintStart_toStartOf="@id/changelog_body"
            app:layout_constraintEnd_toEndOf="@id/changelog_body"
            app:layout_constraintBottom_toBottomOf="@id/changelog_body" />

        <ScrollView
            android:id="@+id/changelog_body"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:layout_constraintTop_toBottomOf="@id/divider1" >

            <TextView
                android:id="@+id/changelog_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

