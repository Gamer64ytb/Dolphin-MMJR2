<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/tv_card_unselected"/>
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/ripple_white">
            <item>
                <shape>
                    <gradient
                        android:angle="45"
                        android:type="linear"
                        android:startColor="?attr/colorGradientSecondaryStart"
                        android:centerColor="?attr/colorGradientSecondaryCenter"
                        android:endColor="?attr/colorGradientSecondaryEnd" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
