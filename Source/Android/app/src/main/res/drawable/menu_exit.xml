<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:right="3dp" android:top="3dp">  <!-- shadow effect -->
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#3F000000" />
        </shape>
    </item>

    <item android:bottom="3dp" android:left="3dp" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
            <gradient
                android:angle="45"
                android:type="linear"
                android:startColor="#E8E64A0C"
                android:centerX="40%"
                android:centerColor="#EC3877"
                android:endColor="@color/dolphin_fucsia" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>
