<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="45"
                        android:type="linear"
                        android:startColor="@color/dolphin_blue"
                        android:centerX="40%"
                        android:endColor="@color/dolphin_blue_dark" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_check"
                android:gravity="center">
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:type="linear"
                android:startColor="@color/dolphin_blue"
                android:centerX="40%"
                android:endColor="@color/dolphin_blue_dark" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
